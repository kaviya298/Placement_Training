import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        while (a>=10){
            int sum=0;
            while(a!=0){
                sum+=a%10;
                a=a/10;
            }
            a=sum;
        }
        System.out.print(a);
    }
}
